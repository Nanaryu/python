<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*">
        <VerticalStackLayout
            Padding="15,0"
            Spacing="5">
            <Label
                x:Name="field"
                Text="0"
                HorizontalOptions="Fill"
                Grid.Column="1"
                Grid.Row="2"
                />
            <HorizontalStackLayout
                Padding="0"
                Spacing="5">
                <Button x:Name="a1" Text="1" Clicked="add" />
                <Button x:Name="a2" Text="2" Clicked="add"/>
                <Button x:Name="a3" Text="3" Clicked="add"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout
                Padding="0"
                Spacing="5">
                <Button x:Name="a4" Text="4" Clicked="add"/>
                <Button x:Name="a5" Text="5" Clicked="add"/>
                <Button x:Name="a6" Text="6" Clicked="add"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout
                Padding="0"
                Spacing="5">
                <Button x:Name="a7" Text="7" Clicked="add"/>
                <Button x:Name="a8" Text="8" Clicked="add"/>
                <Button x:Name="a9" Text="9" Clicked="add"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
