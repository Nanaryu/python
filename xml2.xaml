<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">



    <VerticalStackLayout
        Spacing="50"
        Padding="60">
        <Slider x:Name="red" Maximum="255" ThumbColor="#000"></Slider>
        <Slider x:Name="green" Maximum="255" ThumbColor="#000"></Slider>
        <Slider x:Name="blue" Maximum="255" ThumbColor="#000"></Slider>
        <Entry x:Name="hexcolor" MaxLength="7" MaximumWidthRequest="70" BackgroundColor="LightGray"></Entry>
        <Button x:Name="generate" Text="Generate" Clicked="generate_Clicked"></Button>

    </VerticalStackLayout>

</ContentPage>
